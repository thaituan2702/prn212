<Window x:Class="VehicleEmissionManagement.UI.Viewss.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:VehicleEmissionManagement.UI.Converters"
        Title="Thông Báo" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Thông Báo" 
                     FontSize="24" 
                     FontWeight="Bold"/>

            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal">
                <Button Content="Đánh Dấu Đã Đọc Tất Cả"
                        Width="150"
                        Height="35"
                        Margin="0,0,10,0"
                        Background="#3498db"
                        Foreground="White"
                        Click="MarkAllAsRead_Click"/>
                <Button Content="Xóa Các Mục Đã Đọc"
                        Width="150"
                        Height="35"
                        Background="#e74c3c"
                        Foreground="White"
                        Click="DeleteAllRead_Click"/>
            </StackPanel>
        </Grid>

        <!-- Notifications List -->
        <ListView Grid.Row="1" 
                  x:Name="NotificationsListView"
                  ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#dcdde1" 
                            BorderThickness="0,0,0,1" 
                            Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="{Binding Title}" 
                                     FontWeight="Bold"
                                     FontSize="16">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsRead}" Value="False">
                                                <Setter Property="Foreground" Value="#2980b9"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <TextBlock Grid.Row="1" 
                                     Text="{Binding Message}" 
                                     TextWrapping="Wrap"
                                     Margin="0,5"/>

                            <TextBlock Grid.Row="2" 
                                     Text="{Binding SentDate, StringFormat='Gửi: {0:dd/MM/yyyy HH:mm}'}"
                                     Foreground="#7f8c8d"
                                     FontSize="12"/>

                            <StackPanel Grid.Column="1" 
                                      Grid.RowSpan="3" 
                                      Orientation="Horizontal"
                                      VerticalAlignment="Center">
                                <Button Content="Đánh Dấu Đã Đọc"
                                        Width="120"
                                        Height="30"
                                        Margin="5,0"
                                        Background="#3498db"
                                        Foreground="White"
                                        Click="MarkAsRead_Click"
                                        Visibility="{Binding IsRead, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                <Button Content="Xóa"
                                        Width="70"
                                        Height="30"
                                        Margin="5,0"
                                        Background="#e74c3c"
                                        Foreground="White"
                                        Click="DeleteNotification_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>