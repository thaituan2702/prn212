<Window x:Class="VehicleEmissionManagement.UI.Viewss.StationDashboard"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       Title="Station Dashboard" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Left" Background="#27ae60" Width="200">
                <TextBlock Text="Station Dashboard" Foreground="White" FontSize="20" Margin="20,20,20,40"/>
                <Button Content="Pending Inspections" Margin="10,5" Height="40"/>
                <Button Content="Inspection Records" Margin="10,5" Height="40"/>
                <Button Content="Station Reports" Margin="10,5" Height="40"/>
                <Button Content="Staff Management" Margin="10,5" Height="40"/>
            </StackPanel>
            <Grid Background="#ecf0f1">
                <TextBlock Text="Welcome to Station Dashboard" 
                         FontSize="24" HorizontalAlignment="Center" 
                         VerticalAlignment="Top" Margin="0,20,0,0"/>
            </Grid>
        </DockPanel>
    </Grid>
</Window>