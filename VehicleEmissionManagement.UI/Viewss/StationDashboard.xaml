<Window x:Class="VehicleEmissionManagement.UI.Viewss.StationDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Station Dashboard" Height="700" Width="1000">
    <Grid>
        <DockPanel>
            <!-- Left sidebar menu -->
            <StackPanel DockPanel.Dock="Left" Background="#27ae60" Width="200">
                <TextBlock Text="Quản lý Trạm Đăng kiểm" Foreground="White" 
                          FontSize="20" TextWrapping="Wrap" TextAlignment="Center" 
                          Margin="10,20,10,40"/>

                <Button Content="Lịch hẹn đăng kiểm" 
                        Margin="10,5" 
                        Height="40" 
                        Click="AppointmentManagement_Click"/>

                <Button Content="Báo cáo thống kê" 
                        Margin="10,5" 
                        Height="40" 
                        Click="Reports_Click"/>

                <Button Content="Thông báo" 
                        Margin="10,5" 
                        Height="40" 
                        Click="Notifications_Click"/>

                <Button Content="Thông tin trạm" 
                        Margin="10,5" 
                        Height="40" 
                        Click="StationProfile_Click"/>

                <Button Content="Đăng xuất" 
                        Margin="10,5" 
                        Height="40" 
                        Click="LogoutButton_Click"/>
            </StackPanel>

            <!-- Main Content Area -->
            <Grid x:Name="MainContent" Background="#ecf0f1">
                <!-- Welcome Panel (Default view) -->
                <Grid x:Name="WelcomePanel" Visibility="Visible">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Chào mừng đến với Hệ thống Quản lý Trạm Đăng kiểm" 
                                  FontSize="24" 
                                  TextAlignment="Center"
                                  Margin="0,0,0,20"/>

                        <TextBlock Text="Hãy lựa chọn chức năng từ menu bên trái để bắt đầu" 
                                  FontSize="16" 
                                  TextAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- Appointment Management Panel -->
                <Grid x:Name="AppointmentPanel" Visibility="Collapsed">
                    <!-- Content will be loaded from AppointmentManagementView -->
                </Grid>

                <!-- Reports Panel -->
                <Grid x:Name="ReportsPanel" Visibility="Collapsed">
                    <!-- Content will be loaded from StationReportsView -->
                </Grid>
            </Grid>
        </DockPanel>
    </Grid>
</Window>