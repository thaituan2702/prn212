<Window x:Class="VehicleEmissionManagement.UI.Viewss.StationDashboard"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:converters="clr-namespace:VehicleEmissionManagement.UI.Converters"
       Title="Quản lý Cơ sở Kiểm định" Height="700" Width="1200"
       WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <converters:PendingToVisibilityConverter x:Key="PendingToVisibilityConverter"/>
        <converters:ConfirmedToVisibilityConverter x:Key="ConfirmedToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <DockPanel>
            <!-- Sidebar Navigation Panel -->
            <StackPanel DockPanel.Dock="Left" Background="#27ae60" Width="220">
                <TextBlock Text="Cơ sở Kiểm định" Foreground="White" FontSize="20" Margin="20,20,20,40"/>

                <Button Content="Dashboard" 
                        Command="{Binding NavigateToDashboardCommand}"
                        Margin="10,5" Height="40"
                        Click="Dashboard_Click"/>

                <Button Content="Quản lý Lịch hẹn" 
                        Command="{Binding NavigateToAppointmentsCommand}"
                        Margin="10,5" Height="40"
                        Click="Appointments_Click"/>

                <Button Content="Lịch sử Kiểm định" 
                        Command="{Binding NavigateToInspectionsCommand}"
                        Margin="10,5" Height="40"
                        Click="Inspections_Click"/>

                <Button Content="Báo cáo  Thống kê" 
                        Command="{Binding NavigateToReportsCommand}"
                        Margin="10,5" Height="40"
                        Click="Reports_Click"/>

                <Button Content="Đăng xuất" 
                        Margin="10,5" Height="40"
                        Click="LogoutButton_Click"/>
            </StackPanel>

            <!-- Main Content Area -->
            <Grid Background="#ecf0f1">
                <!-- Dashboard Panel (Mặc định hiển thị) -->
                <Grid x:Name="DashboardPanel" Visibility="Visible" Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                             Text="Dashboard" 
                             FontSize="24" 
                             FontWeight="Bold"
                             Margin="0,0,0,20"/>

                    <!-- Statistics Cards -->
                    <Grid Grid.Row="1" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Total Inspections Card -->
                        <Border Grid.Column="0" 
                                Background="White" 
                                BorderBrush="#dcdde1" 
                                BorderThickness="1" 
                                Margin="0,0,10,0" 
                                CornerRadius="5">
                            <Grid Margin="15">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" 
                                         Text="Tổng số kiểm định" 
                                         FontSize="16"/>
                                <TextBlock Grid.Row="1" 
                                         Text="{Binding TotalInspections}" 
                                         FontSize="36" 
                                         FontWeight="Bold"
                                         Foreground="#27ae60"/>
                            </Grid>
                        </Border>

                        <!-- Pass Inspections Card -->
                        <Border Grid.Column="1" 
                                Background="White" 
                                BorderBrush="#dcdde1" 
                                BorderThickness="1" 
                                Margin="5,0" 
                                CornerRadius="5">
                            <Grid Margin="15">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" 
                                         Text="Số xe đạt" 
                                         FontSize="16"/>
                                <TextBlock Grid.Row="1" 
                                         Text="{Binding PassInspections}" 
                                         FontSize="36" 
                                         FontWeight="Bold"
                                         Foreground="#2ecc71"/>
                            </Grid>
                        </Border>

                        <!-- Fail Inspections Card -->
                        <Border Grid.Column="2" 
                                Background="White" 
                                BorderBrush="#dcdde1" 
                                BorderThickness="1" 
                                Margin="10,0,0,0" 
                                CornerRadius="5">
                            <Grid Margin="15">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" 
                                         Text="Số xe không đạt" 
                                         FontSize="16"/>
                                <TextBlock Grid.Row="1" 
                                         Text="{Binding FailInspections}" 
                                         FontSize="36" 
                                         FontWeight="Bold"
                                         Foreground="#e74c3c"/>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Appointments & Inspections Tabs -->
                    <TabControl Grid.Row="2" Margin="0,0,0,20">
                        <TabItem Header="Lịch hẹn hôm nay">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" 
                                          Orientation="Horizontal" 
                                          Margin="0,10">
                                    <TextBlock Text="Trạng thái:" 
                                             VerticalAlignment="Center"
                                             Margin="0,0,10,0"/>
                                    <ComboBox Width="120" 
                                            ItemsSource="{Binding StatusFilters}" 
                                            SelectedItem="{Binding StatusFilter}"
                                            SelectionChanged="StatusFilter_SelectionChanged"/>
                                </StackPanel>

                                <DataGrid Grid.Row="1" 
                                        ItemsSource="{Binding TodayAppointments}" 
                                        AutoGenerateColumns="False"
                                        IsReadOnly="True">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Biển số xe" 
                                                          Binding="{Binding Vehicle.PlateNumber}" 
                                                          Width="*"/>
                                        <DataGridTextColumn Header="Thời gian" 
                                                          Binding="{Binding AppointmentDate, StringFormat='{}{0:HH:mm}'}" 
                                                          Width="80"/>
                                        <DataGridTextColumn Header="Trạng thái" 
                                                          Binding="{Binding Status}" 
                                                          Width="120"/>
                                        <DataGridTemplateColumn Width="220">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Button Content="Xác nhận" 
                                                                Width="70" 
                                                                Margin="0,0,5,0"
                                                                Command="{Binding DataContext.ConfirmAppointmentCommand, 
                                                                          RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                                CommandParameter="{Binding}"
                                                                Visibility="{Binding Status, Converter={StaticResource PendingToVisibilityConverter}}"/>
                                                        <Button Content="Đổi lịch" 
                                                                Width="70" 
                                                                Margin="0,0,5,0"
                                                                Click="RescheduleButton_Click"
                                                                Visibility="{Binding Status, Converter={StaticResource PendingToVisibilityConverter}}"/>
                                                        <Button Content="Hủy" 
                                                                Width="50"
                                                                Margin="0,0,5,0"
                                                                Command="{Binding DataContext.CancelAppointmentCommand, 
                                                                          RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                                CommandParameter="{Binding}"
                                                                Visibility="{Binding Status, Converter={StaticResource PendingToVisibilityConverter}}"/>
                                                        <Button Content="Nhập KQ" 
                                                                Width="70"
                                                                Click="InputInspectionResult_Click"
                                                                Visibility="{Binding Status, Converter={StaticResource ConfirmedToVisibilityConverter}}"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Kiểm định gần đây">
                            <DataGrid ItemsSource="{Binding RecentInspections}" 
                                    AutoGenerateColumns="False"
                                    IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Biển số xe" 
                                                      Binding="{Binding Vehicle.PlateNumber}" 
                                                      Width="*"/>
                                    <DataGridTextColumn Header="Ngày kiểm định" 
                                                      Binding="{Binding InspectionDate, StringFormat='{}{0:dd/MM/yyyy}'}" 
                                                      Width="120"/>
                                    <DataGridTextColumn Header="Kết quả" 
                                                      Binding="{Binding Result}" 
                                                      Width="80"/>
                                    <DataGridTextColumn Header="CO2" 
                                                      Binding="{Binding CO2Emission}" 
                                                      Width="80"/>
                                    <DataGridTextColumn Header="HC" 
                                                      Binding="{Binding HCEmission}" 
                                                      Width="80"/>
                                    <DataGridTextColumn Header="NOx" 
                                                      Binding="{Binding NOxEmission}" 
                                                      Width="80"/>
                                    <DataGridTextColumn Header="Ngày hết hạn" 
                                                      Binding="{Binding ExpiryDate, StringFormat='{}{0:dd/MM/yyyy}'}" 
                                                      Width="120"/>
                                    <DataGridTemplateColumn Width="100">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="Chi tiết" 
                                                        Width="70"
                                                        Click="InspectionDetails_Click"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>
                    </TabControl>

                    <!-- Refresh Button -->
                    <Button Grid.Row="3" 
                            Content="Làm mới dữ liệu" 
                            Command="{Binding LoadDashboardDataCommand}"
                            Width="150" 
                            Height="35"
                            HorizontalAlignment="Right"/>
                </Grid>

                <!-- Appointment Management Panel -->
                <Grid x:Name="AppointmentsPanel" Visibility="Collapsed" Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                             Text="Quản lý Lịch hẹn" 
                             FontSize="24" 
                             FontWeight="Bold"
                             Margin="0,0,0,20"/>

                    <!-- Filter Controls -->
                    <Grid Grid.Row="1" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                 Text="Ngày:" 
                                 VerticalAlignment="Center"
                                 Margin="0,0,10,0"/>
                        <DatePicker Grid.Column="1" 
                                  SelectedDate="{Binding SelectedDate}"
                                  Width="150"
                                  Margin="0,0,20,0"/>

                        <TextBlock Grid.Column="2" 
                                 Text="Trạng thái:" 
                                 VerticalAlignment="Center"
                                 Margin="0,0,10,0"/>
                        <ComboBox Grid.Column="3" 
                                Width="150" 
                                HorizontalAlignment="Left"
                                ItemsSource="{Binding StatusFilters}" 
                                SelectedItem="{Binding StatusFilter}"/>

                        <Button Grid.Column="4" 
                                Content="Lọc" 
                                Command="{Binding FilterAppointmentsCommand}"
                                Width="80"/>
                    </Grid>

                    <!-- Appointments List -->
                    <DataGrid Grid.Row="2" 
                            ItemsSource="{Binding PendingAppointments}" 
                            AutoGenerateColumns="False"
                            IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Biển số xe" 
                                              Binding="{Binding Vehicle.PlateNumber}" 
                                              Width="*"/>
                            <DataGridTextColumn Header="Chủ xe" 
                                              Binding="{Binding Vehicle.Owner.FullName}" 
                                              Width="*"/>
                            <DataGridTextColumn Header="Ngày hẹn" 
                                              Binding="{Binding AppointmentDate, StringFormat='{}{0:dd/MM/yyyy}'}" 
                                              Width="120"/>
                            <DataGridTextColumn Header="Giờ hẹn" 
                                              Binding="{Binding AppointmentDate, StringFormat='{}{0:HH:mm}'}" 
                                              Width="80"/>
                            <DataGridTextColumn Header="Trạng thái" 
                                              Binding="{Binding Status}" 
                                              Width="120"/>
                            <DataGridTextColumn Header="Ngày tạo" 
                                              Binding="{Binding CreatedAt, StringFormat='{}{0:dd/MM/yyyy}'}" 
                                              Width="120"/>
                            <DataGridTemplateColumn Width="250">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Xác nhận" 
                                                    Width="70" 
                                                    Margin="0,0,5,0"
                                                    Command="{Binding DataContext.ConfirmAppointmentCommand, 
                                                              RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"
                                                    Visibility="{Binding Status, Converter={StaticResource PendingToVisibilityConverter}}"/>
                                            <Button Content="Đổi lịch" 
                                                    Width="70" 
                                                    Margin="0,0,5,0"
                                                    Click="RescheduleButton_Click"
                                                    Visibility="{Binding Status, Converter={StaticResource PendingToVisibilityConverter}}"/>
                                            <Button Content="Hủy" 
                                                    Width="50"
                                                    Margin="0,0,5,0"
                                                    Command="{Binding DataContext.CancelAppointmentCommand, 
                                                              RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"
                                                    Visibility="{Binding Status, Converter={StaticResource PendingToVisibilityConverter}}"/>
                                            <Button Content="Nhập KQ" 
                                                    Width="70"
                                                    Click="InputInspectionResult_Click"
                                                    Visibility="{Binding Status, Converter={StaticResource ConfirmedToVisibilityConverter}}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>

                <!-- Inspection Management Panel -->
                <Grid x:Name="InspectionsPanel" Visibility="Collapsed" Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                             Text="Lịch sử Kiểm định" 
                             FontSize="24" 
                             FontWeight="Bold"
                             Margin="0,0,0,20"/>

                    <!-- Filter Controls -->
                    <Grid Grid.Row="1" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                 Text="Từ ngày:" 
                                 VerticalAlignment="Center"
                                 Margin="0,0,5,0"/>
                        <DatePicker Grid.Column="1" 
                                  SelectedDate="{Binding StartDate}"
                                  Width="120"
                                  Margin="0,0,10,0"/>

                        <TextBlock Grid.Column="2" 
                                 Text="Đến ngày:" 
                                 VerticalAlignment="Center"
                                 Margin="0,0,5,0"/>
                        <DatePicker Grid.Column="3" 
                                  SelectedDate="{Binding EndDate}"
                                  Width="120"
                                  Margin="0,0,10,0"/>

                        <Button Grid.Column="5" 
                                Content="Lọc" 
                                Command="{Binding LoadRecentInspectionsCommand}"
                                Width="80"/>
                    </Grid>

                    <!-- Inspections List -->
                    <DataGrid Grid.Row="2" 
                            ItemsSource="{Binding RecentInspections}" 
                            AutoGenerateColumns="False"
                            IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Biển số xe" 
                                              Binding="{Binding Vehicle.PlateNumber}" 
                                              Width="*"/>
                            <DataGridTextColumn Header="Chủ xe" 
                                              Binding="{Binding Vehicle.Owner.FullName}" 
                                              Width="*"/>
                            <DataGridTextColumn Header="Ngày kiểm định" 
                                              Binding="{Binding InspectionDate, StringFormat='{}{0:dd/MM/yyyy}'}" 
                                              Width="110"/>
                            <DataGridTextColumn Header="Kết quả" 
                                              Binding="{Binding Result}" 
                                              Width="80"/>
                            <DataGridTextColumn Header="CO2 (g/km)" 
                                              Binding="{Binding CO2Emission}" 
                                              Width="80"/>
                            <DataGridTextColumn Header="HC (ppm)" 
                                              Binding="{Binding HCEmission}" 
                                              Width="80"/>
                            <DataGridTextColumn Header="NOx (ppm)" 
                                              Binding="{Binding NOxEmission}" 
                                              Width="80"/>
                            <DataGridTextColumn Header="Ngày hết hạn" 
                                              Binding="{Binding ExpiryDate, StringFormat='{}{0:dd/MM/yyyy}'}" 
                                              Width="110"/>
                            <DataGridTemplateColumn Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Chi tiết" 
                                                Width="70"
                                                Click="InspectionDetails_Click"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>

                <!-- Reports Panel -->
                <Grid x:Name="ReportsPanel" Visibility="Collapsed" Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                             Text="Báo cáo  Thống kê" 
                             FontSize="24" 
                             FontWeight="Bold"
                             Margin="0,0,0,20"/>

                    <!-- Date Range Filter -->
                    <Grid Grid.Row="1" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                 Text="Từ ngày:" 
                                 VerticalAlignment="Center"
                                 Margin="0,0,5,0"/>
                        <DatePicker Grid.Column="1" 
                                  SelectedDate="{Binding StartDate}"
                                  Width="120"
                                  Margin="0,0,10,0"/>

                        <TextBlock Grid.Column="2" 
                                 Text="Đến ngày:" 
                                 VerticalAlignment="Center"
                                 Margin="0,0,5,0"/>
                        <DatePicker Grid.Column="3" 
                                  SelectedDate="{Binding EndDate}"
                                  Width="120"
                                  Margin="0,0,10,0"/>

                        <Button Grid.Column="5" 
                                Content="Tạo báo cáo" 
                                Command="{Binding LoadStatisticsCommand}"
                                Width="100"/>
                    </Grid>

                    <!-- Statistics Cards and Chart -->
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Statistics Cards -->
                        <Grid Grid.Row="0" Margin="0,10,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Total Inspections Card -->
                            <Border Grid.Column="0" 
                                    Background="White" 
                                    BorderBrush="#dcdde1" 
                                    BorderThickness="1" 
                                    Margin="0,0,10,0" 
                                    CornerRadius="5">
                                <Grid Margin="15">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" 
                                             Text="Tổng số kiểm định" 
                                             FontSize="16"/>
                                    <TextBlock Grid.Row="1" 
                                             Text="{Binding TotalInspections}" 
                                             FontSize="36" 
                                             FontWeight="Bold"
                                             Foreground="#27ae60"/>
                                </Grid>
                            </Border>

                            <!-- Pass Inspections Card -->
                            <Border Grid.Column="1" 
                                    Background="White" 
                                    BorderBrush="#dcdde1" 
                                    BorderThickness="1" 
                                    Margin="5,0" 
                                    CornerRadius="5">
                                <Grid Margin="15">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" 
                                             Text="Số xe đạt" 
                                             FontSize="16"/>
                                    <TextBlock Grid.Row="1" 
                                             Text="{Binding PassInspections}" 
                                             FontSize="36" 
                                             FontWeight="Bold"
                                             Foreground="#2ecc71"/>
                                </Grid>
                            </Border>

                            <!-- Fail Inspections Card -->
                            <Border Grid.Column="2" 
                                    Background="White" 
                                    BorderBrush="#dcdde1" 
                                    BorderThickness="1" 
                                    Margin="10,0,0,0" 
                                    CornerRadius="5">
                                <Grid Margin="15">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" 
                                             Text="Số xe không đạt" 
                                             FontSize="16"/>
                                    <TextBlock Grid.Row="1" 
                                             Text="{Binding FailInspections}" 
                                             FontSize="36" 
                                             FontWeight="Bold"
                                             Foreground="#e74c3c"/>
                                </Grid>
                            </Border>
                        </Grid>

                        <!-- Monthly Statistics -->
                        <DataGrid Grid.Row="1" 
                                ItemsSource="{Binding MonthlyStatistics}" 
                                AutoGenerateColumns="False"
                                IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Tháng" 
                                                  Binding="{Binding Month}" 
                                                  Width="100"/>
                                <DataGridTextColumn Header="Tổng số kiểm định" 
                                                  Binding="{Binding Total}" 
                                                  Width="150"/>
                                <DataGridTextColumn Header="Số xe đạt" 
                                                  Binding="{Binding Pass}" 
                                                  Width="120"/>
                                <DataGridTextColumn Header="Số xe không đạt" 
                                                  Binding="{Binding Fail}" 
                                                  Width="150"/>
                                <DataGridTextColumn Header="Tỷ lệ đạt (%)" 
                                                  Binding="{Binding PassRate, StringFormat='{}{0:F2}'}" 
                                                  Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>

                    <!-- Export Buttons -->
                    <StackPanel Grid.Row="3" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                Margin="0,20,0,0">
                        <Button Content="Xuất Excel" 
                                Width="120" 
                                Height="35"
                                Margin="0,0,10,0"
                                Click="ExportExcel_Click"/>
                        <Button Content="Xuất PDF" 
                                Width="120" 
                                Height="35"
                                Click="ExportPDF_Click"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </DockPanel>
    </Grid>
</Window>