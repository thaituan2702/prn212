<Window x:Class="VehicleEmissionManagement.UI.Viewss.RescheduleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đổi lịch hẹn" 
        Height="350" 
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                 Text="Đổi lịch hẹn kiểm định" 
                 FontSize="20" 
                 FontWeight="Bold"
                 Margin="0,0,0,20"/>

        <!-- Vehicle Info -->
        <Border Grid.Row="1" 
                BorderBrush="#dcdde1" 
                BorderThickness="1" 
                Padding="15" 
                Background="#f5f6fa"
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" 
                         Text="Biển số xe:" 
                         FontWeight="SemiBold"
                         Margin="0,0,10,5"/>
                <TextBlock Grid.Row="0" Grid.Column="1" 
                         Text="{Binding Vehicle.PlateNumber}"
                         Margin="0,0,0,5"/>

                <TextBlock Grid.Row="1" Grid.Column="0" 
                         Text="Chủ xe:" 
                         FontWeight="SemiBold"
                         Margin="0,0,10,5"/>
                <TextBlock Grid.Row="1" Grid.Column="1" 
                         Text="{Binding Vehicle.Owner.FullName}"
                         Margin="0,0,0,5"/>

                <TextBlock Grid.Row="2" Grid.Column="0" 
                         Text="Lịch hẹn cũ:" 
                         FontWeight="SemiBold"
                         Margin="0,0,10,0"/>
                <TextBlock Grid.Row="2" Grid.Column="1" 
                         Text="{Binding AppointmentDate, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}"
                         Margin="0,0,0,0"/>
            </Grid>
        </Border>

        <!-- New Date Time Selection -->
        <StackPanel Grid.Row="2" Margin="0,0,0,20">
            <TextBlock Text="Chọn ngày mới:" 
                     FontWeight="SemiBold"
                     Margin="0,0,0,5"/>
            <DatePicker x:Name="NewDatePicker" 
                      Margin="0,0,0,15" 
                      Height="30"/>

            <TextBlock Text="Chọn giờ mới:" 
                     FontWeight="SemiBold"
                     Margin="0,0,0,5"/>
            <ComboBox x:Name="NewTimeComboBox"
                     Height="30">
                <ComboBoxItem Content="09:00"/>
                <ComboBoxItem Content="10:00"/>
                <ComboBoxItem Content="11:00"/>
                <ComboBoxItem Content="13:30"/>
                <ComboBoxItem Content="14:30"/>
                <ComboBoxItem Content="15:30"/>
            </ComboBox>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" 
                  Orientation="Horizontal" 
                  HorizontalAlignment="Right">
            <Button Content="Đổi lịch" 
                    Width="100" 
                    Height="35"
                    Background="#2ecc71"
                    Foreground="White"
                    Click="ConfirmButton_Click"
                    Margin="0,0,10,0"/>
            <Button Content="Hủy" 
                    Width="100" 
                    Height="35"
                    Background="#e74c3c"
                    Foreground="White"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>